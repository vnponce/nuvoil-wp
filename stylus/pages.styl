@import "nib"
@import "normalize.styl"

gris-oscuro = #333333
rojo-claro = #EA5351
blanco = #fff
gris-claro = #666666
rojo-transparente = rgba(221,0,49,0.7)
gris-medio = #3C3C3B
gris-clarito = #E6E6E6

.rojo
	color rojo-claro !important
*
	margin 0
	padding 0
h2,h3
	font-size 21px 
	line-height 23px
	font-weight 400
h2,h3,article,section 
	margin 0px
	padding 0px
ul
	margin 0
	padding 0
figure
	margin 0 
	padding 0
	font-size 0px 
p 
	font-size 1rem
	line-height 1.5rem
	font-weight 400
	color gris-claro
strong
	font-weight 700
	
body,html
	width 100%
	font-family 'Roboto', sans-serif
	font-size 14px

/********************** ABRE CABECERA ***********************/

/*** LINEA NEGRA ***/
header
	width 100%
.cabecera-principal
	position fixed
	z-index 10000
	transition all .5s ease-out
.barra-negra
	width 100%
	height 60px
	background gris-oscuro
.wrapt
	width 90%
	height 100%
	min-width 280px
	max-width 970px
	margin 0 auto
	font-size 0
	position relative
.barra-negra section
	display inline-block
	height 100%
.idioma
	width 20%
	height 100%
	vertical-align top
	text-transform uppercase
	z-index 1000
	position relative
.lenguaje
	width 40px
	font-size 1rem
	color blanco
	line-height 60px
	div
		display inline-block
.triangulito-lenguaje
	width 0
	height 0
	border-style solid
	border-width 5px 5px 0 5px
	border-color blanco transparent transparent transparent;
	float right
	margin-top 28px
.seleccion-lenguaje
	margin-top -40px
	position absolute
	background blanco
	width 0px
	height 2px
	font-size .9rem
	list-style none
	border-radius 5px
	overflow hidden
	box-shadow 0px 0px 17px -2px rgba(0,0,0,0.25)
	transition width .2s ease-out, height .2s ease-out
	li 
		width 80%
		margin 0 auto
		color gris-claro
		height 30px
		line-height 30px
		&:first-child
			border-bottom 1px solid gris-claro
.idioma-activo
	width 80px !important
	height 60px !important
 
.bolsa-blog
	width 60%
	height 100%
	vertical-align top
.bolsa-blog ul
	width 100%
	font-size 1rem
	text-align right
	li
		list-style none
		display inline-block
		line-height 60px
	a 
		text-decoration none
		color blanco
.contacto
	width 20%
	position relative
	text-align right
.contacto div
	width 50px
	height 100%
	display inline-block
	background rojo-claro
	margin-right -30%
	img
		width 20px
		height auto
		margin-right 15px
		margin-top 15px

/*** LINEA BLANCA ***/

.barra-blanca
	width 100%
	height 80px
	font-size 0
	background blanco
	position relative
	box-shadow 0px 2px 6px -2px rgba(0,0,0,0.25)
.cont-logo
	width 80%
	height 65px
	padding-top 15px
	display inline-block
	vertical-align top
	position absolute
	z-indez 100
	figure
		height 50px
	img
		width auto
		height 100%
.social
	display none
.menu-icono
	width 35px
	position absolute
	right 8px
	top 22px
	display inline-block
	span
		width 100%
		display block
		height 18px
		margin-bottom 5px
		background url("../img/menu.svg") no-repeat center
	div
		text-align center
		font-size .9rem
		font-weight 300
		text-transform uppercase
nav
	width 0
	height 0
	position absolute
	z-index 1000
	right 0
	display inline-block
	vertical-align top
	box-shadow 0px 2px 6px -2px rgba(0,0,0,0.25)
	border-radius 5px
	background blanco
	margin-top 15px
	overflow hidden
	transition width .2s ease-out, height .4s ease-out
	text-transform uppercase
	ul 
		width 80%
		margin 0 auto
		text-align center
		li 
			list-style none
			width 100%
			width 100%
			height 50px
			line-height 50px
			font-size 1rem
			a
				text-decoration none
				color gris-claro
				p
					width 100%
					height 50px
					line-height 50px
					font-size 1rem
.nav-activo
	width 100%
	height 300px
.bloque
	width 100%
	height 140px



/********************** SLIDER ***********************/
.slider 
	width 100%
	height 150px
	img
		width 100%
		height 100%
		background-size cover


/********************** CONT BOLSA ***********************/

.cont-bolsa
	text-align left
	margin-top 30px
	font-size 14px
	color gris-claro
	display inline-block
	section
		width 90%
		margin 0 auto
		h1
			font-size 21px
			margin 0
			color gris-claro
		h2
			font-size 17px
			text-transform uppercase
			color gris-medio	
		h3
			font-size 14px
			line-height 1.5rem
			color gris-claro
			margin-bottom 
		hr
			width 100%
			border 1px solid gris-clarito
			margin-top 30px
			margin-bottom 20px
		.redes
			width 30px
			height 30px
			margin-right 5px
			margin-top 10px
			background blue
			display inline-block
		

/********************** Cont Vacantes ***********************/		
.cont-vacantes
	text-align left
	font-size 14px
	border 1px solid gris-clarito
	border-top 3px solid gris-clarito
	color gris-claro
	line-height 21px
	width 95%
	margin 30px auto 0 auto
	display inline-block
	figure
		height 200px
		width 100%
		img 
				width 100%
				height 100%
				background-size cover
	div
		width 100%
		height 30px
		background rojo-transparente	
		top -40px
		position relative
		padding-top 10px
		h4
			text-align left
			color white
			margin-left 10px
			font-size 17px
	article
		width 90%
		margin 0 auto
		margin-bottom 30px
		h2
			color gris-claro
			font-weight bold
			line-height 23px
	hr
		width 100%
		width 100%
		border 1px solid gris-clarito
		margin-bottom 20px
		margin-top 30px

.cont-valores 
//	margin-top 30px 
	width 90%
	padding-top 30px 
	margin 0 auto 30px auto
	text-align center
	line-height 25px
	color gris-claro
	padding-bottom 30px
	h2  
		font-size 21px
		font-weight bold
		color gris-claro
	section
		perspective 1000
		display inline-block
		article 
			height 250px		
			width 90%
			margin 0 auto			
		article.front
			background url('http://nuvoil.app/wp-content/themes/nuvoil/img/equipo-nuvoil.jpg');
			transition all 0.6s ease
			transform-style  preserve-3d
			background-size cover
			&:hover
				transform rotateY(180deg)
			figure 
				width 100%
				margin-top 30px
				img
					width 175px
					height 175px
					margin 5px auto auto auto
			span
				color white
				text-transform uppercase
				width 80%
				margin 0px auto auto auto
				font-size 17px
				font-weight bold
		article.back
			background gris-clarito
			color gris-oscuro
			text-align left
			figure
				width 75px
				height 75px
				padding-top 15px
				margin-left 15px
				margin-bottom 15px
				img
					width 75px
					height 75px
			p
				width 200px
				color gris-claro	
				margin 0 auto
				span
					text-transform uppercase
					text-align left
					font-weight bold
			


/**********************MENSAJE ***********************/

.cont-mensaje
	width 100%
	padding-bottom 50px
	margin-top 50px
	background gris-clarito
	text-align right
	padding-top 30px
.btn-telefono
	width 48%
	height 50px
	border-radius 5px
	background blanco
	display inline-block
	box-shadow 0px 0px 17px -2px rgba(0,0,0,0.25)
	position absolute
	left 0px
	text-align center
	img
		width 30px 
		display inline-block
		margin 0 auto
		margin-top 10px
.mensaje 
	width 48%
	height 50px
	border-radius 5px 
	overflow hidden
	display inline-block
	position relative
	z-index 1000
	box-shadow 0px 0px 17px -2px rgba(0,0,0,0.25)
	transition width .1s ease-out, height .2s .2s ease-out
	header
		width 100%
		height 60px 
		background rojo-claro
		transition all .6s
		text-align center
		overflow hidden
		img
			width 30px
			height auto
			display inline-block
			text-align center
			vertical-align top
			margin-top 15px
			margin-bottom 20px
		p 
			width 210px
			display inline-block
			text-align left
			margin-left 15px
			margin-top 15px
			vertical-align top
			color blanco
	.cuerpo-mensaje
		width 100% !important
		height 300px !important
		background blanco

.mensaje-activo
	width 100% !important
	height 360px !important
	header
		background gris-oscuro
		height 75px


.redes
	width 100%
	border-radius 5px 
	margin-top 30px
	overflow hidden
	box-shadow 0px 0px 17px -2px rgba(0,0,0,0.25)
	header
		width 95%
		padding 20px 0px
		padding-left 5%
		background gris-claro
		font-size 1rem
		font-weight 300
		text-transform uppercase
		text-align left
		color blanco
	.cuerpo-redes
		width 100%
		background blanco
		text-align center
		padding-top 30px
		section
			display inline-block
			width 130px
			text-align left
			margin-bottom 30px
			div
				width 20px 
				height 20px
				background gris-claro
				display inline-block
				vertical-align top
				margin-right 10px
			p 
				display inline-block
				vertical-align top
				text-transform uppercase

footer
	width 100%
	background gris-oscuro
	div
		font-size .7rem
		color blanco
	.logo-blanco
		width 100%
		height 80px
		line-height 80px
		border-bottom 1px solid blanco
		img
			width auto
			height 50px
			margin-top 15px
	.dato-uno
		width 58%
